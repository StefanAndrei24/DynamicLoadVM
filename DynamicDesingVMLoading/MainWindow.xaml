<Window x:Class="DynamicDesingVMLoading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicDesingVMLoading"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--Load the Info panels-->
        <ContentControl Content="{Binding NavigationViewModel.BaseInformationPanelViewModel}"/>
        
        <!--Load the side bar info panels-->
        <ContentControl Content="{Binding NavigationViewModel.BaseInformationPanelViewModel.BaseSideBarViewModel}"/>
    </Grid>
</Window>
